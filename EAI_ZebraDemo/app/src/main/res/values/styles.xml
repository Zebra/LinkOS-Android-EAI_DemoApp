<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">


        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:text">@style/MyTitleTextStyle</item>

    </style>





    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/darkBackGround</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/zebra_blue</item>
        <item name="background">@color/zebra_blue</item>

    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">center</item>


    </style>

    <style name="TextColor" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/product_text</item>

    </style>

    <style name="ErrorButtonAppearance" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/zebra_blue</item>

    </style>

    <style name="ButtonAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/zebra_blue</item>

    </style>
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:checkMark">@color/light_gray</item>
        <item name="android:textColor">@color/zebra_blue</item>


    </style>


</resources>
